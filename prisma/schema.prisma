generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id             String    @id @default(cuid())
  name           String?
  email          String    @unique
  emailVerified  DateTime?
  hashedPassword String?
  image          String?
  role           Role      @default(OWNER)
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  workspaceId    String?
  workspace      Workspace? @relation(fields: [workspaceId], references: [id])
  accounts       Account[]
  sessions       Session[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime
  @@unique([identifier, token])
}

enum Role {
  OWNER
  ADMIN
  MANAGER
  EMPLOYEE
}

model Workspace {
  id        String   @id @default(cuid())
  name      String
  slug      String   @unique
  industry  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  stripeCustomerId       String?  @unique
  stripeSubscriptionId   String?  @unique
  stripePriceId          String?
  stripeCurrentPeriodEnd DateTime?
  members   User[]
  employees Employee[]
  shifts    Shift[]
  locations Location[]
  timeEntries TimeEntry[]
}

model Employee {
  id          String   @id @default(cuid())
  firstName   String
  lastName    String
  email       String?
  phone       String?
  position    String?
  hourlyRate  Float?
  weeklyHours Float?
  color       String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  workspaceId String
  workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  shifts      Shift[]
  absences    Absence[]
  timeEntries TimeEntry[]
  @@unique([email, workspaceId])
}

model Location {
  id        String   @id @default(cuid())
  name      String
  address   String?
  createdAt DateTime @default(now())
  workspaceId String
  workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  shifts      Shift[]
  timeEntries TimeEntry[]
}

model Shift {
  id        String      @id @default(cuid())
  date      DateTime    @db.Date
  startTime String
  endTime   String
  notes     String?
  status    ShiftStatus @default(SCHEDULED)
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  employeeId  String
  employee    Employee  @relation(fields: [employeeId], references: [id], onDelete: Cascade)
  locationId  String?
  location    Location? @relation(fields: [locationId], references: [id])
  workspaceId String
  workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  @@index([workspaceId, date])
  @@index([employeeId, date])
}

enum ShiftStatus {
  SCHEDULED
  CONFIRMED
  IN_PROGRESS
  COMPLETED
  CANCELLED
  NO_SHOW
}

model Absence {
  id        String      @id @default(cuid())
  type      AbsenceType
  startDate DateTime    @db.Date
  endDate   DateTime    @db.Date
  notes     String?
  approved  Boolean     @default(false)
  createdAt DateTime    @default(now())
  employeeId String
  employee   Employee @relation(fields: [employeeId], references: [id], onDelete: Cascade)
}

enum AbsenceType {
  URLAUB
  KRANK
  FEIERTAG
  SONSTIGES
}

// ── Zeiterfassung (Time Tracking) ──────────────────────────────

enum TimeEntryStatus {
  ENTWURF          // Draft — saved but not yet submitted
  EINGEREICHT      // Submitted — awaiting manager review
  KORREKTUR        // Correction required — sent back to employee
  ZURUECKGEWIESEN  // Rejected by manager
  GEPRUEFT         // Reviewed — first-level approval
  BESTAETIGT       // Confirmed / final approval
}

model TimeEntry {
  id           String          @id @default(cuid())
  date         DateTime        @db.Date
  startTime    String          // HH:mm
  endTime      String          // HH:mm

  // Break tracking
  breakStart   String?         // HH:mm (optional if breakMinutes used)
  breakEnd     String?         // HH:mm
  breakMinutes Int             @default(0)

  // Computed durations (stored for fast queries & export)
  grossMinutes Int             @default(0) // total minutes (end - start)
  netMinutes   Int             @default(0) // gross - break

  remarks      String?         // Free-text comments

  status       TimeEntryStatus @default(ENTWURF)
  submittedAt  DateTime?
  confirmedAt  DateTime?
  confirmedBy  String?         // userId of the confirmer

  // Optional: Auftraggeber (client) confirmation
  clientConfirmed   Boolean  @default(false)
  clientConfirmedAt DateTime?
  clientConfirmedBy String?

  createdAt    DateTime        @default(now())
  updatedAt    DateTime        @updatedAt

  // Relations
  employeeId   String
  employee     Employee        @relation(fields: [employeeId], references: [id], onDelete: Cascade)
  locationId   String?
  location     Location?       @relation(fields: [locationId], references: [id])
  shiftId      String?         // optional link to a planned Shift
  workspaceId  String
  workspace    Workspace       @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  auditLog     TimeEntryAudit[]

  @@index([workspaceId, date])
  @@index([employeeId, date])
  @@index([status])
}

model TimeEntryAudit {
  id          String   @id @default(cuid())
  action      String   // CREATED | SUBMITTED | APPROVED | CORRECTED | REJECTED | CONFIRMED | CLIENT_CONFIRMED
  changes     String?  @db.Text // JSON diff of changed fields
  comment     String?  // Manager/admin comment
  performedBy String   // userId
  performedAt DateTime @default(now())

  timeEntryId String
  timeEntry   TimeEntry @relation(fields: [timeEntryId], references: [id], onDelete: Cascade)

  @@index([timeEntryId])
}

model Notification {
  id        String   @id @default(cuid())
  type      String   // TIME_ENTRY_SUBMITTED | TIME_ENTRY_APPROVED | TIME_ENTRY_REJECTED | TIME_ENTRY_CORRECTED
  title     String
  message   String   @db.Text
  read      Boolean  @default(false)
  link      String?  // Deep-link path e.g. /zeiterfassung?entry=xxx

  createdAt DateTime @default(now())

  userId      String   // recipient
  workspaceId String

  @@index([userId, read])
  @@index([workspaceId])
}
