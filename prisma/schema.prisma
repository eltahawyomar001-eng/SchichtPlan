generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id             String    @id @default(cuid())
  name           String?
  email          String    @unique
  phone          String?
  emailVerified  DateTime?
  hashedPassword String?
  image          String?
  role           Role      @default(OWNER)
  consentGivenAt DateTime? // DSGVO: timestamp when user accepted Datenschutz + AGB
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  workspaceId    String?
  workspace      Workspace? @relation(fields: [workspaceId], references: [id])
  accounts       Account[]
  sessions       Session[]
  notificationPreferences NotificationPreference[]
  invitationsSent Invitation[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime
  @@unique([identifier, token])
}

enum Role {
  OWNER
  ADMIN
  MANAGER
  EMPLOYEE
}

enum InvitationStatus {
  PENDING
  ACCEPTED
  EXPIRED
  REVOKED
}

model Invitation {
  id          String           @id @default(cuid())
  token       String           @unique
  email       String
  role        Role             @default(EMPLOYEE)
  status      InvitationStatus @default(PENDING)
  expiresAt   DateTime
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt

  workspaceId String
  workspace   Workspace        @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  invitedById String
  invitedBy   User             @relation(fields: [invitedById], references: [id], onDelete: Cascade)

  @@index([workspaceId])
  @@index([email, workspaceId])
}

model Workspace {
  id        String   @id @default(cuid())
  name      String
  slug      String   @unique
  industry  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  members   User[]
  employees Employee[]
  shifts    Shift[]
  locations Location[]
  timeEntries TimeEntry[]
  absenceRequests AbsenceRequest[]
  availabilities  Availability[]
  shiftSwaps      ShiftSwapRequest[]
  shiftChangeRequests ShiftChangeRequest[]
  timeAccounts    TimeAccount[]
  automationSettings AutomationSetting[]
  invitations Invitation[]
}

model Employee {
  id          String   @id @default(cuid())
  firstName   String
  lastName    String
  email       String?
  phone       String?
  position    String?
  hourlyRate  Float?
  weeklyHours Float?
  color       String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  workspaceId String
  workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  shifts      Shift[]
  timeEntries TimeEntry[]
  absenceRequests AbsenceRequest[]
  availabilities  Availability[]
  swapsRequested  ShiftSwapRequest[] @relation("SwapRequester")
  swapsOffered    ShiftSwapRequest[] @relation("SwapTarget")
  changeRequests  ShiftChangeRequest[]
  timeAccount     TimeAccount?
  @@unique([email, workspaceId])
}

model Location {
  id        String   @id @default(cuid())
  name      String
  address   String?
  createdAt DateTime @default(now())
  workspaceId String
  workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  shifts      Shift[]
  timeEntries TimeEntry[]
}

model Shift {
  id        String      @id @default(cuid())
  date      DateTime    @db.Date
  startTime String
  endTime   String
  notes     String?
  status    ShiftStatus @default(SCHEDULED)
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  employeeId  String
  employee    Employee  @relation(fields: [employeeId], references: [id], onDelete: Cascade)
  locationId  String?
  location    Location? @relation(fields: [locationId], references: [id])
  workspaceId String
  workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  swapsFrom   ShiftSwapRequest[] @relation("SwapFromShift")
  swapsTo     ShiftSwapRequest[] @relation("SwapToShift")
  changeRequests ShiftChangeRequest[]
  @@index([workspaceId, date])
  @@index([employeeId, date])
}

enum ShiftStatus {
  SCHEDULED
  CONFIRMED
  IN_PROGRESS
  COMPLETED
  CANCELLED
  NO_SHOW
}

// ── Zeiterfassung (Time Tracking) ──────────────────────────────

enum TimeEntryStatus {
  ENTWURF          // Draft — saved but not yet submitted
  EINGEREICHT      // Submitted — awaiting manager review
  KORREKTUR        // Correction required — sent back to employee
  ZURUECKGEWIESEN  // Rejected by manager
  GEPRUEFT         // Reviewed — first-level approval
  BESTAETIGT       // Confirmed / final approval
}

model TimeEntry {
  id           String          @id @default(cuid())
  date         DateTime        @db.Date
  startTime    String          // HH:mm
  endTime      String          // HH:mm

  // Break tracking
  breakStart   String?         // HH:mm (optional if breakMinutes used)
  breakEnd     String?         // HH:mm
  breakMinutes Int             @default(0)

  // Computed durations (stored for fast queries & export)
  grossMinutes Int             @default(0) // total minutes (end - start)
  netMinutes   Int             @default(0) // gross - break

  remarks      String?         // Free-text comments

  status       TimeEntryStatus @default(ENTWURF)
  submittedAt  DateTime?
  confirmedAt  DateTime?
  confirmedBy  String?         // userId of the confirmer

  createdAt    DateTime        @default(now())
  updatedAt    DateTime        @updatedAt

  // Relations
  employeeId   String
  employee     Employee        @relation(fields: [employeeId], references: [id], onDelete: Cascade)
  locationId   String?
  location     Location?       @relation(fields: [locationId], references: [id])
  shiftId      String?         // optional link to a planned Shift
  workspaceId  String
  workspace    Workspace       @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  auditLog     TimeEntryAudit[]

  @@index([workspaceId, date])
  @@index([employeeId, date])
  @@index([status])
}

model TimeEntryAudit {
  id          String   @id @default(cuid())
  action      String   // CREATED | SUBMITTED | APPROVED | CORRECTED | REJECTED | CONFIRMED | CLIENT_CONFIRMED
  changes     String?  @db.Text // JSON diff of changed fields
  comment     String?  // Manager/admin comment
  performedBy String   // userId
  performedAt DateTime @default(now())

  timeEntryId String
  timeEntry   TimeEntry @relation(fields: [timeEntryId], references: [id], onDelete: Cascade)

  @@index([timeEntryId])
}

model Notification {
  id        String   @id @default(cuid())
  type      String   // TIME_ENTRY_SUBMITTED | TIME_ENTRY_APPROVED | TIME_ENTRY_REJECTED | TIME_ENTRY_CORRECTED
  title     String
  message   String   @db.Text
  read      Boolean  @default(false)
  link      String?  // Deep-link path e.g. /zeiterfassung?entry=xxx

  createdAt DateTime @default(now())

  userId      String   // recipient
  workspaceId String

  @@index([userId, read])
  @@index([workspaceId])
}

// ── Feature 1: Abwesenheitsmanagement (Absence Management) ─────

enum AbsenceRequestStatus {
  AUSSTEHEND     // Pending
  GENEHMIGT      // Approved
  ABGELEHNT      // Rejected
  STORNIERT      // Cancelled by employee
}

enum AbsenceCategory {
  URLAUB         // Vacation
  KRANK          // Sick leave
  ELTERNZEIT     // Parental leave
  SONDERURLAUB   // Special leave (wedding, bereavement, etc.)
  UNBEZAHLT      // Unpaid leave
  FORTBILDUNG    // Training / education
  SONSTIGES      // Other
}

model AbsenceRequest {
  id          String              @id @default(cuid())
  category    AbsenceCategory
  startDate   DateTime            @db.Date
  endDate     DateTime            @db.Date
  halfDayStart Boolean            @default(false)  // Start date is half-day
  halfDayEnd   Boolean            @default(false)  // End date is half-day
  totalDays   Float               @default(0)      // Computed total working days
  reason      String?             @db.Text
  status      AbsenceRequestStatus @default(AUSSTEHEND)

  // Approval workflow
  reviewedBy  String?             // userId of reviewer
  reviewedAt  DateTime?
  reviewNote  String?             @db.Text

  createdAt   DateTime            @default(now())
  updatedAt   DateTime            @updatedAt

  employeeId  String
  employee    Employee            @relation(fields: [employeeId], references: [id], onDelete: Cascade)
  workspaceId String
  workspace   Workspace           @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  @@index([workspaceId, status])
  @@index([employeeId, startDate])
}

// ── Feature 2: Verfügbarkeiten (Availability) ──────────────────

enum AvailabilityType {
  VERFUEGBAR    // Available
  BEVORZUGT     // Preferred
  NICHT_VERFUEGBAR // Not available
}

model Availability {
  id          String           @id @default(cuid())
  weekday     Int              // 0 = Monday, 6 = Sunday (ISO)
  startTime   String?          // HH:mm — null means whole day
  endTime     String?          // HH:mm
  type        AvailabilityType @default(VERFUEGBAR)
  validFrom   DateTime         @db.Date  // Start of validity period
  validUntil  DateTime?        @db.Date  // null = indefinite
  notes       String?

  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt

  employeeId  String
  employee    Employee         @relation(fields: [employeeId], references: [id], onDelete: Cascade)
  workspaceId String
  workspace   Workspace        @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  @@index([workspaceId, employeeId])
  @@index([employeeId, weekday])
}

// ── Feature 2b: Schichtänderungsanfrage (Shift Change Request) ──

enum ChangeRequestStatus {
  AUSSTEHEND     // Pending — awaiting manager review
  GENEHMIGT      // Approved — changes applied to the shift
  ABGELEHNT      // Rejected by manager
  STORNIERT      // Cancelled by employee
}

model ShiftChangeRequest {
  id            String              @id @default(cuid())
  status        ChangeRequestStatus @default(AUSSTEHEND)
  reason        String?             @db.Text

  // The shift the employee wants to change
  shiftId       String
  shift         Shift               @relation(fields: [shiftId], references: [id], onDelete: Cascade)

  // Requested changes (null = keep current value)
  newDate       DateTime?           @db.Date
  newStartTime  String?             // HH:mm
  newEndTime    String?             // HH:mm
  newNotes      String?             @db.Text

  // The employee requesting the change
  requesterId   String
  requester     Employee            @relation(fields: [requesterId], references: [id], onDelete: Cascade)

  // Manager review
  reviewedBy    String?             // userId of reviewer
  reviewedAt    DateTime?
  reviewNote    String?             @db.Text

  createdAt     DateTime            @default(now())
  updatedAt     DateTime            @updatedAt

  workspaceId   String
  workspace     Workspace           @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  @@index([workspaceId, status])
  @@index([requesterId])
  @@index([shiftId])
}

// ── Feature 3: Schichttausch (Shift Swap) ──────────────────────

enum SwapStatus {
  ANGEFRAGT      // Requested by employee
  ANGENOMMEN     // Accepted by target employee
  GENEHMIGT      // Approved by manager
  ABGELEHNT      // Rejected (by target or manager)
  STORNIERT      // Cancelled
  ABGESCHLOSSEN  // Completed (shifts actually swapped)
}

model ShiftSwapRequest {
  id            String     @id @default(cuid())
  status        SwapStatus @default(ANGEFRAGT)
  reason        String?    @db.Text

  // The shift the requester wants to give away
  shiftId       String
  shift         Shift      @relation("SwapFromShift", fields: [shiftId], references: [id])

  // The shift the requester wants in return (optional for "open" swaps)
  targetShiftId String?
  targetShift   Shift?     @relation("SwapToShift", fields: [targetShiftId], references: [id])

  // Employees involved
  requesterId   String
  requester     Employee   @relation("SwapRequester", fields: [requesterId], references: [id], onDelete: Cascade)
  targetId      String?    // null = open swap (anyone can accept)
  target        Employee?  @relation("SwapTarget", fields: [targetId], references: [id])

  // Manager review
  reviewedBy    String?
  reviewedAt    DateTime?
  reviewNote    String?

  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt

  workspaceId   String
  workspace     Workspace  @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  @@index([workspaceId, status])
  @@index([requesterId])
  @@index([targetId])
}

// ── Feature 4: Arbeitszeitkonten (Time Accounts / Hour Balances) ─

model TimeAccount {
  id              String   @id @default(cuid())
  contractHours   Float    @default(40)    // Weekly contracted hours
  carryoverMinutes Int     @default(0)     // Carried over from previous period
  currentBalance  Int      @default(0)     // Running balance in minutes (+/-)
  lastCalculated  DateTime @default(now()) // Timestamp of last balance recalculation
  periodStart     DateTime @db.Date        // Current accounting period start
  periodEnd       DateTime? @db.Date       // Current accounting period end (null = ongoing)

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  employeeId      String   @unique         // One account per employee
  employee        Employee @relation(fields: [employeeId], references: [id], onDelete: Cascade)
  workspaceId     String
  workspace       Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  @@index([workspaceId])
}

// ── Automation Settings ────────────────────────────────────────

enum NotificationChannel {
  EMAIL
}

model NotificationPreference {
  id        String              @id @default(cuid())
  channel   NotificationChannel
  enabled   Boolean             @default(false)
  createdAt DateTime            @default(now())
  updatedAt DateTime            @updatedAt

  userId String
  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, channel])
  @@index([userId])
}

model AutomationSetting {
  id        String   @id @default(cuid())
  key       String   // e.g. "shiftConflictDetection", "autoApproveAbsence"
  enabled   Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  workspaceId String
  workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  @@unique([workspaceId, key])
  @@index([workspaceId])
}
